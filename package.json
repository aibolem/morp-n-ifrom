{
  "name": "morse-pro",
  "version": "1.0.1",
  "description": "Library for manipulating Morse code text and sound. Understands prosigns and Farnsworth speed. Can create WAV files and analyse input from the microphone or audio files.",
  "keywords": [
    "morse code",
    "decoder",
    "wav file",
    "microphone",
    "sound file",
    "adaptive",
    "keyer",
    "iambic",
    "prosigns"
  ],
  "license": "EUPL-1.2",
  "homepage": "https://morsecode.scphillips.com",
  "author": {
    "name": "Stephen C Phillips",
    "email": "steve@scphillips.com",
    "url": "http://scphillips.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scp93ch/morse-pro.git"
  },
  "bugs": {
    "url": "https://github.com/scp93ch/morse-pro/issues"
  },
  "directories": {
    "lib": "lib",
    "doc": "doc"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "esdoc": "^0.5.2",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./doc"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "clean": "rimraf lib coverage",
    "prebuild": "npm run clean -s",
    "build": "babel src -d lib",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run build"
  }
}
